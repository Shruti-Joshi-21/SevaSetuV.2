{
  "name": "UserProfile",
  "type": "object",
  "properties": {
    "user_email": {
      "type": "string",
      "description": "User's email address"
    },
    "full_name": {
      "type": "string"
    },
    "user_role": {
      "type": "string",
      "enum": [
        "volunteer",
        "team_lead",
        "admin",
        "staff"
      ],
      "default": "volunteer"
    },
    "phone": {
      "type": "string"
    },
    "profile_image_url": {
      "type": "string"
    },
    "face_data_urls": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Array of face images for recognition"
    },
    "onboarding_completed": {
      "type": "boolean",
      "default": false
    },
    "department": {
      "type": "string"
    },
    "office_location": {
      "type": "string"
    },
    "office_latitude": {
      "type": "number"
    },
    "office_longitude": {
      "type": "number"
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "emergency_contact": {
      "type": "string"
    },
    "total_hours_contributed": {
      "type": "number",
      "default": 0
    },
    "tasks_completed": {
      "type": "number",
      "default": 0
    },
    "is_active": {
      "type": "boolean",
      "default": true
    },
    "last_active": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "user_email",
    "full_name",
    "user_role"
  ]
}