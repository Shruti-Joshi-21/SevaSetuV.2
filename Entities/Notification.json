{
  "name": "Notification",
  "type": "object",
  "properties": {
    "user_email": {
      "type": "string",
      "description": "Target user email"
    },
    "title": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": [
        "info",
        "success",
        "warning",
        "error",
        "task",
        "attendance",
        "leave"
      ],
      "default": "info"
    },
    "is_read": {
      "type": "boolean",
      "default": false
    },
    "action_url": {
      "type": "string",
      "description": "URL to navigate when clicked"
    },
    "related_id": {
      "type": "string",
      "description": "ID of related entity"
    }
  },
  "required": [
    "user_email",
    "title",
    "message",
    "type"
  ]
}